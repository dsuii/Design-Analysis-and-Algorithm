#include <iostream>
using namespace std;

int main() {
    int a[] = {1, 2, 3, 4, 5, 6, 7, 8};
    int key = 6;
    int low = 0;
    int flag = 0;
    int high = sizeof(a) / sizeof(a[0]) - 1; // Calculate the size of the array correctly

    while (low <= high) { // Corrected condition: low should be less than or equal to high
        int mid = (low + high) / 2;
        if (a[mid] == key) {
            flag = 1;
            break;
        } else if (a[mid] > key) {
            high = mid - 1;
        } else {
            low = mid + 1;
        }
    }

    if (flag == 0) {
        cout << "Element not found";
    } else if (flag == 1) {
        cout << "Element found";
    }

    return 0;
}

